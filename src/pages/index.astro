---
import Layout from "@components/Layout/index.astro";
---

<Layout title="Les petits plats">

 <header class="enseigne">
  <img src="./assets/toque.svg" alt="logo de l'enseigne" />
  <h1>Les petits plats</h1>
 </header>

 <main class="main">
  <form id="form-recherche" action="#">

   <label for="chercher-recette" class="label-chercher-recette">
    <input type="search" class="chercher-recette" name="chercher-recette" id="chercher-recette" placeholder="Rechercher une recette" />
    
    <button class="loupe" name="loupe" id="loupe" type="submit">
      <img src="./assets/loupe.svg" alt="loupe" />
    </button>

   </label>

   <div class="list-tags"></div>

   <div class="form-criteres">

    <label class="label-critere label-ingredient" for="ingredients">
      <span>
        <input type="search" name="ingredients" id="ingredients" placeholder="IngrÃ©dients" />
        <img class="icon-arrow" src="./assets/arrow_down.svg" alt="" />
      </span>
      <p class="list-ingredients"></p>
    </label>

    <label class="label-critere label-appareils" for="appareils">
      <span>
        <input type="search" name="appareils" id="appareils" placeholder="Appareils" />
        <img class="icon-arrow" src="./assets/arrow_down.svg" alt="" />
      </span>
      <p class="list-appareils"></p>
    </label>

    <label class="label-critere label-ustensiles" for="ustensiles">
      <span>
        <input type="search" name="ustensiles" id="ustensiles" placeholder="Ustensiles" />
        <img class="icon-arrow" src="./assets/arrow_down.svg" alt="" />
      </span>
      <p class="list-ustensiles"></p>
    </label>

   </div>

   <div class="resultats"></div>

  </form>
 </main>
 
</Layout>